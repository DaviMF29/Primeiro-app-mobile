<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_margin="7dp">

    <ImageView
        android:id="@+id/escudo_clube"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/barcelona"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/nome_clube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Barcelona"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/escudo_clube"
        app:layout_constraintTop_toTopOf="@id/escudo_clube">

    </TextView>

    <TextView
        android:id="@+id/desc_clube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Time de futebol catalÃ£o"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/nome_clube"
        app:layout_constraintStart_toEndOf="@+id/escudo_clube"
        app:layout_constraintTop_toBottomOf="@+id/nome_clube">

    </TextView>

    <TextView
        android:id="@+id/qntd_champions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/desc_clube"
        app:layout_constraintStart_toEndOf="@id/escudo_clube"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp">
    </TextView>

    <ImageView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_border_24"
        app:layout_constraintBottom_toBottomOf="@id/qntd_champions"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>